<%- include('partials/header') %>

<div class="jumbotron">
  <h1>Modifier le profil</h1>
</div>

<div class="container">
    <% if (error) { %>
        <div class="alert alert-danger" role="alert">
          <p style="color: red;"><%= error %></p>
        </div>
      <% } else if (message) { %>
        <div class="alert alert-success" role="alert">
          <p style="color: red;"><%= message %></p>
        </div>
      <% } %>
      <div class="btn">
        <a href="/">Retour</a>
      </div>
  <form action="/update" method="post">
    <div class="form-group">
      <label for="nom">Nom</label><br>
      <input type="text" name="nom" id="nom" value="<%= user.nom %>" required /><br><br>
    </div>

    <div class="form-group">
      <label for="prenom">Pr√©nom</label><br>
      <input type="text" name="prenom" id="prenom" value="<%= user.prenom %>" required /><br><br>
    </div>

    <div class="form-group">
      <label for="email">Email</label><br>
      <input type="email" name="email" id="email" value="<%= user.email %>" required /><br><br>
    </div>

    <div class="form-group">
        <label for="oldPassword">Ancien mot de passe:</label>
        <input type="password" id="oldPassword" name="oldPassword" required>
    </div>
    
    <div class="form-group">
        <label for="newPassword">Nouveau mot de passe:</label>
        <input type="password" id="newPassword" name="newPassword" required>
    </div>
    
    <div class="form-group">
        <label for="confirmPassword">Confirmez le nouveau mot de passe:</label>
        <input type="password" id="confirmPassword" name="confirmPassword" required>
    </div>

    <div class="btn">
      <input type="submit" value="Enregistrer les modifications" />
    </div>
  </form>
</div>

<%- include('partials/footer') %>

